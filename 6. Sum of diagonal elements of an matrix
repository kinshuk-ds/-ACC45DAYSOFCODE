//Find the sum of diagonal elements of an matrix

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int r,c,i,j;
    cout<<"Enter the number of rows= ";
    cin>>r;
    cout<<"Enter the number of columns= ";
    cin>>c;

    //Input 2d array
    int a[r][c];
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            cout<<"Enter the elements of array= ";
            cin>>a[i][j];
        }
    }

    //adding and printing the output
    int sum = 0;
    for(i=0;i<r;i++)
    {
        sum += a[i][i];
    }
    cout<<sum;
}
