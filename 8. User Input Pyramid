#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter number of steps: ";
    cin>>n;
    for(int i=0;i<n;i++)
    {
        for(int r=0;r<n-i-1;r++)
        {
            cout<<" ";
        }
        for(int j=0;j<2*i-1;j++)
        {
            cout<<"*";
        }
        cout<<"\n";
    }
    return 0;
}
